casquinha = 4.00
sundae = 7.50
qtde_casquinha = int(input("Quantidade de Casquinhas: "))
qtde_sundae = int(input("Quantidade de sundae: "))
qtde_total = qtde_casquinha + qtde_sundae
valor_casquinha = qtde_casquinha * casquinha
valor_sundae = qtde_sundae * sundae
valor_total = valor_casquinha + valor_sundae

if valor_total >= 40.00:
   desconto = 4.00
else:
   desconto = 0.00

valor_final = valor_total - desconto

print("\n---Resumo da Compra---")
print(f" Total de produtos: {qtde_total}")
print(f" Valor dos Produtos R$; {valor_total:.2f}")
print(f" Desconto aplicado  R$: {desconto:.2f}")
print(f" Valor Final da Compra R${valor_final:.2f}")



